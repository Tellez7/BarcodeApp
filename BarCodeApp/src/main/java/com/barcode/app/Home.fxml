<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.barcode.app.ControllerHome">
	<center>
		<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
			<children>
				<Label fx:id="lblTitle" text="Codigo de barras" />
				<TextField fx:id="txtFieldSearch" />
				<Button mnemonicParsing="false" onAction="#onSearch" text="Buscar" />
            <VBox alignment="CENTER" prefHeight="50.0">
               <children>
      				<Text fx:id="textProduct" strokeType="OUTSIDE" strokeWidth="0.0" text="Producto: " />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="50.0">
               <children>
      				<Text fx:id="textProvider" strokeType="OUTSIDE" strokeWidth="0.0" text="Proveedor: " />
               </children>
            </VBox>
            <HBox>
               <children>
                  <HBox alignment="CENTER" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#btnProduct" text="Producto" />
                     </children></HBox>
                  <HBox alignment="CENTER" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#btnProvider" text="Proveedor" />
                     </children></HBox>
               </children>
            </HBox>
			</children>
		</VBox>
	</center>
</BorderPane>
